<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="apextechies.singhmehandi">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".AppController"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".component.activity.SplashActivity"
                  android:theme="@style/AppTheme.customtheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="apextechies.singhmehandi.component.activity.login.virew.LoginActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".component.activity.shop.view.ShopActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:label=""/>
        <activity android:name=".component.activity.shop.view.AddShopActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:label="@string/title_add_shop"
                  android:windowSoftInputMode="adjustResize">
        </activity>




        <meta-data
                android:name="android.app.default_searchable"
                android:value="com.apkgetter.SearchResultsActivity" />

        <activity android:name=".component.activity.order.view.OrderListActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:label="">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable" />
        </activity>





        <activity android:name=".component.activity.shop.view.ShopDetailsActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:label="@string/title_shop_details"/>
        <activity android:name=".component.activity.order.view.AddOrderActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:label=""/>

        <meta-data android:name="preloaded_fonts" android:resource="@array/preloaded_fonts"/>
        <uses-library android:name="org.apache.http.legacy" android:required="false" />
    </application>

</manifest>